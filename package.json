{
	"name": "@fiet/js",
	"description": "Fiet makes deeply liquid AMM markets powered by dynamic reserve liquidity.",
	"repository": "git@gitlab.com:usherlabs/fiet-js.git",
	"homepage": "https://fiet.finance/",
	"author": "Usher Labs <labs@usher.so>",
	"version": "0.0.1",
	"main": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"module": "./dist/index.js",
	"files": [
		"dist/**/*",
		"README.md",
		"package.json"
	],
	"scripts": {
		"build": "tsc",
		"build:watch": "tsc --watch",
		"clean": "rimraf dist",
		"prebuild": "npm run clean",
		"test": "jest",
		"example:auth": "npx ts-node examples/auth.ts",
		"example:deposit": "npx ts-node examples/deposit.ts",
		"example:withdraw": "npx ts-node examples/withdraw.ts",
		"example:quote": "npx ts-node examples/quote.ts"
	},
	"keywords": [
		"stellar",
		"blockchain",
		"defi",
		"amm",
		"sep-10",
		"sep-24",
		"sep-38",
		"anchor"
	],
	"license": "ISC",
	"publishConfig": {
		"access": "public"
	},
	"devDependencies": {
		"@types/jest": "^29.5.14",
		"@types/node": "^22.15.18",
		"jest": "^29.7.0",
		"jest-fetch-mock": "^3.0.3",
		"rimraf": "^6.0.1",
		"ts-jest": "^29.3.4",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.1",
		"typescript": "^5.8.3",
		"dotenv": "^16.5.0"
	},
	"dependencies": {
		"@stellar/stellar-sdk": "^13.3.0",
		"axios": "^1.9.0",
		"bignumber.js": "^9.3.0"
	},
	"jest": {
		"preset": "ts-jest",
		"testEnvironment": "node",
		"setupFiles": [
			"./setupTests.js"
		],
		"collectCoverageFrom": [
			"src/**/*.{ts,tsx}",
			"!src/**/*.d.ts",
			"!src/script/**"
		],
		"moduleDirectories": [
			"node_modules"
		],
		"modulePaths": [
			"<rootDir>/"
		],
		"testMatch": [
			"src/**/*.test.ts",
			"**/?(*.)+(spec|test).ts"
		],
		"transform": {
			"^.+\\.ts$": "ts-jest"
		},
		"moduleFileExtensions": [
			"ts",
			"js",
			"json"
		]
	}
}
